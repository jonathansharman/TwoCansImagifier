<Window x:Class="TwoCansImageConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Two Cans and String Profile Pic Imagifier" Height="400" Width="525" ResizeMode="CanMinimize">
    <Grid>
        <Button x:Name="ImportButton" Content="Import Profile Image" HorizontalAlignment="Center" Margin="10,10,10,0" VerticalAlignment="Top" Width="120" Click="ImportButton_Click" Height="31"/>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Height="245" Margin="10,46,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="497" VerticalScrollBarVisibility="Auto"/>
        <Label x:Name="CopiedLabel" Content="Copied to Clipboard" Visibility="Hidden" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,46" VerticalAlignment="Bottom" Width="499" Foreground="Green" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="ChooseOutputButton" Content="Export Image Data" HorizontalAlignment="Center" Margin="200,0,199,10" VerticalAlignment="Bottom" Width="120" Click="ExportButton_Click" Height="31"/>

    </Grid>
</Window>
